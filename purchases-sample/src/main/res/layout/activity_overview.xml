<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="purchaserInfo"
                type="com.revenuecat.purchases.PurchaserInfo" />
    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/purchaser_info_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:elevation="@dimen/cardview_default_elevation"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/purchaser_info_card_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/purchaser_info_label"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PurchaserInfo"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <include
                            layout="@layout/row_view"
                            android:id="@+id/purchaser_info_request_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/purchaser_info_label"
                            bind:rcHeader="@{`As of`}"
                            bind:rcValue="@{purchaserInfo.requestDate.toString()}"/>

                    <include
                            layout="@layout/row_view"
                            android:id="@+id/purchaser_info_app_user_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            bind:rcHeader="@{`Original App User Id: `}"
                            bind:rcValue="@{purchaserInfo.originalAppUserId}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/purchaser_info_request_date" />

                    <include
                            layout="@layout/row_view"
                            android:id="@+id/purchaser_info_app_active_entitlements"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            bind:rcHeader="@{`Active Entitlements: `}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/purchaser_info_app_user_id" />

                    <include
                            layout="@layout/row_view"
                            android:id="@+id/purchaser_info_app_all_entitlements"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            bind:rcHeader="@{`All Entitlements: `}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/purchaser_info_app_active_entitlements" />

                    <include
                            layout="@layout/row_view"
                            android:id="@+id/purchaser_info_schema_version"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            bind:rcHeader="@{`Schema Version: `}"
                            bind:rcValue="@{String.valueOf(purchaserInfo.schemaVersion)}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/purchaser_info_app_all_entitlements" />

                    <include
                            layout="@layout/row_view"
                            android:id="@+id/purchaser_info_first_seen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            bind:rcHeader="@{`First seen: `}"
                            bind:rcValue="@{purchaserInfo.firstSeen.toString()}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/purchaser_info_schema_version" />

                    <include
                            layout="@layout/row_view"
                            android:id="@+id/purchaser_info_management_url"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            bind:rcHeader="@{`Management URL: `}"
                            bind:rcValue="@{purchaserInfo.managementURL.toString()}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/purchaser_info_first_seen" />

                    <include
                            layout="@layout/row_view"
                            android:id="@+id/purchaser_info_original_purchase_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            bind:rcHeader="@{`Original Purchase Date: `}"
                            bind:rcValue="@{purchaserInfo.originalPurchaseDate.toString()}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/purchaser_info_management_url" />

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/purchaser_info_card_expand_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_down"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/purchaser_info_original_purchase_date" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/purchaser_info_details_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/purchaser_info_card_expand_button"
                            app:layout_constraintVertical_bias="0">

                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/purchaser_info_details_header"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="JSON Object"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/purchaser_info_json_object"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/purchaser_info_details_header" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>